{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["jest", "vite/client"],
    "lib": ["esnext", "dom"],
  },
  "include": ["vite.config.*", "env.d.ts", "src/**/*.ts", "src/**/*.vue", "tests/**/*.ts"]
}
